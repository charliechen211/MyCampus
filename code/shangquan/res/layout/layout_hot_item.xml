<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/merchant_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

    <TextView
            android:id="@+id/merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="半价桶"
            android:layout_alignTop="@id/merchant_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/merchant_image"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

    <RatingBar
            android:id="@+id/merchant_ratting"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            android:layout_alignLeft="@id/merchant_name"
            android:layout_below="@id/merchant_name"
            android:layout_marginTop="5dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人均65元"
            android:textSize="13dp"
            android:id="@+id/average_cost"
            android:layout_below="@+id/merchant_ratting"
            android:layout_alignLeft="@+id/merchant_ratting"
            android:layout_marginTop="5dp"/>

    <TextView
            android:id="@+id/recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门指数"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/merchant_ratting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>

    <TextView
            android:id="@+id/merchant_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommend_title"
            android:layout_alignRight="@id/recommend_title"
            android:layout_marginTop="5dp"
            android:text="90"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
            android:layout_alignTop="@id/merchant_ratting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500米"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/tsuyukusa"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:id="@+id/merchant_distance"/>

</RelativeLayout>