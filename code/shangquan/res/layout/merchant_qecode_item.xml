<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/edit_text_box_one">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/discountImage"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/kfcdish_1"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/qecodeImage"
            android:layout_alignTop="@+id/discountImage"
            android:layout_toRightOf="@+id/discountImage"
            android:layout_marginLeft="20dp"
            android:src="@drawable/qecode1"/>

</RelativeLayout>