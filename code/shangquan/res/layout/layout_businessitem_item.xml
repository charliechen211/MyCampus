<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_box_one">

    <ImageView
            android:id="@+id/item_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/kfcdish_2"/>

    <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_image"
            android:layout_toRightOf="@+id/item_image"
            android:text="半价桶"
            android:textAppearance="?android:attr/textAppearanceLarge"/>


    <TextView
            android:id="@+id/recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门指数"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/item_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    <TextView
            android:id="@+id/item_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommend_title"
            android:layout_alignRight="@id/recommend_title"
            android:text="90"
            android:textSize="30dp"/>

    <RatingBar
            android:id="@+id/item_ratting"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            android:layout_below="@+id/item_name"
            android:layout_toRightOf="@+id/item_image"/>

    <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_ratting"
            android:layout_toRightOf="@+id/item_image"
            android:text="单价：5元"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
            android:id="@+id/item_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="肯德基餐厅"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/item_price"
            android:layout_alignRight="@+id/item_reason"/>

</RelativeLayout>