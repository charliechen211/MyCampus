<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp">

    <TextView
            android:id="@+id/content"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/title_fold"
            android:textSize="16dp"/>

    <TextView
            android:id="@+id/isFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/content"
            android:text="来自好友"
            android:textColor="@color/minor_fold"
            android:textSize="13dp"/>

    <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/isFriend"
            android:text="2014年7月27日"
            android:textColor="@color/minor_fold"
            android:textSize="13dp"/>


    <TextView
            android:id="@+id/commentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/content"
            android:layout_toRightOf="@id/timestamp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/minor_fold"
            android:text="评论(6)"
            android:textSize="13dp"/>

    <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_navigation_right"/>


</RelativeLayout>