<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:background="@drawable/edit_text_box_one">

    <ImageView
            android:id="@+id/merchant_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/western"
            />

    <TextView
            android:id="@+id/merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/merchant_image"
            android:layout_toRightOf="@+id/merchant_image"
            android:text="肯德基"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
            android:id="@+id/merchant_tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/merchant_name"
            android:layout_below="@+id/merchant_name"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TagStyle"
            android:background="@drawable/tag_style"
            android:text="随便吃吃"/>

    <TextView
            android:id="@+id/merchant_tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/merchant_tag_1"
            android:layout_below="@+id/merchant_tag_1"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TagStyle"
            android:background="@drawable/tag_style"
            android:text="辣死了"/>

    <TextView
            android:id="@+id/merchant_tag_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/merchant_tag_2"
            android:layout_below="@+id/merchant_tag_2"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TagStyle"
            android:background="@drawable/tag_style"
            android:text="太贵了"/>


    <TextView
            android:id="@+id/recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignRight="@+id/merchant_ratting"
            android:layout_below="@+id/merchant_ratting"
            android:text="推荐指数"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
            android:id="@+id/merchant_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommend_title"
            android:layout_alignRight="@id/recommend_title"
            android:text="90"
            android:textSize="30dp"/>

    <RatingBar
            android:id="@+id/merchant_ratting"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/merchant_name"
            android:layout_marginRight="14dp"/>


</RelativeLayout>