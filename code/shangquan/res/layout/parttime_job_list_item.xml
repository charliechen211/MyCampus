<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="18dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

    <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/jobTitle"
            android:singleLine="true"
            android:text="半价桶大特惠"
            android:textColor="@color/title_fold"
            android:gravity="left"
            android:textSize="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobTitle"
            android:layout_alignLeft="@id/jobTitle"
            android:id="@+id/jobTime"
            android:textSize="13dp"
            android:textColor="@color/minor_fold"
            android:text="2014-12-01"/>

    <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_navigation_right"/>
</RelativeLayout>
