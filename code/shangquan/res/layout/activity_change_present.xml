<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/name"
            android:layout_alignTop="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="20dp"/>

    <TextView
            android:id="@+id/merchantTab_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@id/name"
            android:text=""
            android:textAppearance="@style/TagStyle"
            android:background="@drawable/tag_style"/>

    <TextView
            android:id="@+id/merchantTab_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/merchantTab_1"
            android:layout_alignBottom="@+id/merchantTab_1"
            android:layout_toRightOf="@+id/merchantTab_1"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/TagStyle"
            android:background="@drawable/tag_style"
            android:text=""/>

    <TextView
            android:id="@+id/merchantTab_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/merchantTab_2"
            android:layout_alignBottom="@+id/merchantTab_2"
            android:layout_toRightOf="@+id/merchantTab_2"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/TagStyle"
            android:background="@drawable/tag_style"
            android:text=""/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="我的积分"
            android:id="@+id/myScore"
            android:layout_below="@+id/merchantTab_1"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@+id/merchantTab_1"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/score"
            android:layout_alignTop="@+id/myScore"
            android:layout_toRightOf="@+id/myScore"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="精美礼品"
            android:id="@+id/presentText"
            android:layout_below="@+id/image"
            android:layout_alignLeft="@+id/image"
            android:layout_marginTop="10dp"/>

    <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/presents"
            android:layout_below="@+id/presentText"
            android:layout_alignLeft="@+id/presentText"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"

            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:columnWidth="90dp"
            android:stretchMode="columnWidth"
            android:gravity="center"

            android:background="@android:color/transparent"
            />

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/progress"
            android:visibility="invisible"/>


</RelativeLayout>