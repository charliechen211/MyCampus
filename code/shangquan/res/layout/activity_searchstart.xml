<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/node_activity_root"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="visible">

    <RelativeLayout
            android:id="@+id/layout_surface_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/process_recomment_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="132dp"
            android:gravity="center"
            android:visibility="gone">

        <ProgressBar
                android:id="@+id/process_recomment_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/process_recomment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/process_recomment_bar"
                android:layout_toRightOf="@id/process_recomment_bar"
                android:gravity="center_vertical"
                android:text="@string/process_text_text"/>

    </RelativeLayout>

</FrameLayout>