<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".SlidingMenuActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/merchantTab_1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:text=""/>

        <TextView
                android:id="@+id/merchantTab_1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:text="我的积分"/>

        <TextView
                android:id="@+id/merchantTab_2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/merchantTab_1"
                android:layout_marginLeft="5dp"
                android:text="女装"/>

        <TextView
                android:id="@+id/merchantTab_3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/merchantTab_2"
                android:layout_marginLeft="5dp"
                android:text="男装"/>

        <TextView
                android:id="@+id/merchantTab_4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/merchantTab_3"
                android:layout_marginLeft="5dp"
                android:text="鞋子"/>

        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/merchantTab_4"
                android:layout_marginLeft="5dp"
                android:text="包包"/>

        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/textView5"
                android:layout_marginLeft="5dp"
                android:text="配饰"/>

        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/textView6"
                android:layout_marginLeft="5dp"
                android:text="美容"/>

        <ListView
                android:id="@+id/merchant_recommend_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
        </ListView>
    </LinearLayout>

</RelativeLayout>