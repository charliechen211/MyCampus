<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="20dp"
              android:paddingRight="18dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/picture"
            android:layout_marginRight="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/title"
                android:textColor="@color/title_fold"
                android:text="这个半价桶超好吃"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:id="@+id/description"
                android:textColor="@color/minor_fold"
                android:text="描述"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/createTime"
                    android:text="2014-12-01 9:00am"
                    android:textSize="12dp"
                    android:textColor="@color/minor_fold"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/replyNum"
                    android:layout_marginLeft="10dp"
                    android:text="回复(3)"
                    android:textSize="12dp"
                    android:textColor="@color/minor_fold"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:layout_marginRight="10dp"
            android:id="@+id/picture"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/navigationBtn"/>

    <ImageView
            android:id="@+id/navigationBtn"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_navigation_right"/>

</RelativeLayout>